{
  "variables": {
    "base_image": "okffi/otp",
    "otp_image": "okffi/otp"
  },
  "builders": [
    {
	"type": "docker",
	"image": "{{user `base_image`}}",
	"commit": true,
	"pull": false
    }
  ],
  "provisioners": [
    {
	"type": "shell",
	"inline": [
		"sleep 30",
		"cd /otp",
		"sudo git pull git://github.com/opentripplanner/OpenTripPlanner.git",
		"cd /otp/OpenTripPlanner",
		"mvn clean package"
	]
    }
  ]
}